import java.util.*;
class CoinChange {
    public static int countChar(String str,int i, int length){
        if(length == 0){
            return 0;
        }
        else if(length == 1 && Integer.parseInt(str)%2 == 0){
            return 1;
        }
        else if(length == 1 && Integer.parseInt(str)%2 != 0){
            return 1;
        }
        else{
            if(Integer.parseInt("" + str.charAt(0))%2 == 0){
                return 1 + countChar(str.substring(i+1), i+1, str.length()-1);
            }
            else{
                return 0 + countChar(str.substring(i+1), i+1, str.length()-1);
            }
        }
    }
    public static void main(String args[] ) throws Exception {
        // Write your code here
        Scanner scanner = new Scanner(System.in);
        String str = scanner.nextLine();
        int count = countChar(str, 0, str.length());
        System.out.println(count);
    }
}
